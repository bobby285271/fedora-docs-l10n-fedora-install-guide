#: ./pages/install/Troubleshooting.adoc:444
#, no-wrap
msgid ""
"GRUB_TIMEOUT=5\n"
"GRUB_DISTRIBUTOR=\"$(sed 's, release.*$,,g' /etc/system-release)\"\n"
"GRUB_DEFAULT=saved\n"
"GRUB_DISABLE_SUBMENU=true\n"
"GRUB_TERMINAL_OUTPUT=\"console\"\n"
"GRUB_CMDLINE_LINUX=\"rd.lvm.lv=rhel/root vconsole.font=latarcyrheb-sun16 "
"rd.lvm.lv=rhel/swap $([ -x /usr/sbin/rhcrashkernel.param ] && "
"/usr/sbin/rhcrashkernel-param || :) vconsole.keymap=us rhgb quiet "
"mem=1024M\"\n"
"GRUB_DISABLE_RECOVERY=\"true\"\n"
msgstr ""
"GRUB_TIMEOUT=5\n"
"GRUB_DISTRIBUTOR=\"$(sed 's, release.*$,,g' /etc/system-release)\"\n"
"GRUB_DEFAULT=saved\n"
"GRUB_DISABLE_SUBMENU=true\n"
"GRUB_TERMINAL_OUTPUT=\"console\"\n"
"GRUB_CMDLINE_LINUX=\"rd.lvm.lv=rhel/root vconsole.font=latarcyrheb-sun16 rd."
"lvm.lv=rhel/swap $([ -x /usr/sbin/rhcrashkernel.param ] && /usr/sbin/"
"rhcrashkernel-param || :) vconsole.keymap=us rhgb quiet mem=1024M\"\n"
"GRUB_DISABLE_RECOVERY=\"true\"\n"
